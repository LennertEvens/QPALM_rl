{
    "python.formatting.provider": "yapf",
    "python.linting.mypyEnabled": true,
    "cmake.configureEnvironment": {
        "VIRTUAL_ENV": "${workspaceFolder}/.venv",
        "CMAKE_PREFIX_PATH": "${workspaceFolder}/.venv"
    },
    "cmake.configureSettings": {
        "BUILD_SHARED_LIBS": false,
        "CMAKE_POSITION_INDEPENDENT_CODE": true,
        "QPALM_WITH_MEX": true,
        "QPALM_WITH_PYTHON": true,
        "QPALM_WITH_CXX": true,
        "QPALM_WITH_JULIA": true,
        "QPALM_WITH_COVERAGE": false,
        "QPALM_WITH_MTX": true,
        "QPALM_WITH_QPS": true,
        "Python3_ROOT_DIR": "${workspaceFolder}/py-venv",
        "Python3_FIND_REGISTRY": "NEVER",
        "Python3_FIND_STRATEGY": "LOCATION",
    },
}